                        @Html.LabelFor(model => model.itemImg, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.itemImg, new { htmlAttributes = new { @class = "form-control" } })
