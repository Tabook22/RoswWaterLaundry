            </div>*@
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="/Scripts/respond.js"></script>
    <script src="/Content/jquery ui/jquery-ui.js"></script>
    <script src="/Scripts/jquery.validate.js"></script>
