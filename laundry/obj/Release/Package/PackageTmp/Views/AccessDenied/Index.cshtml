
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="/Content/bootstrap.css">
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="/Content/jquery ui/jquery-ui.css">
    <style>
        body {
            background-image: url('../../Content/Images/dg2.png');
        }
        .accessDe {
            width: 50rem;
            height: 30rem;
            margin-left: auto;
            margin-right: auto;
            margin-top: 10rem;
            padding-top:2rem;
            border: 1px solid #ff0000;
            color: red;
            text-align:center;
            padding-left:2rem;
            -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
-moz-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
        }
        .hlklogin a{
            padding:2rem;
            color:red;
            font-weight:bold;
            font-size:2rem;
            text-decoration:none;
        }
    </style>
</head>
<body>
    <div class="accessDe"> 
      
        <img src="~/Content/Images/access_denied.gif" />
        <p class="hlklogin">
            <a href="@Url.Action("Login","Account")">>>Login Page<<</a>
        </p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="/Scripts/respond.js"></script>
    <script src="/Content/jquery ui/jquery-ui.js"></script>
    <script src="/Scripts/jquery.validate.js"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript"></script>

</body>
</html>
